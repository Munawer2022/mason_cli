import 'package:flutter/material.dart';
import 'package:provider/provider.dart';
import '../../resource/components/platform_text_form_field.dart';

import '/utils/routes/routes_name.dart';
import '/view_model/auth/{{auth_view_view_model}}';
import '/resource/app_navigator.dart';

class SignUpView extends StatefulWidget {
  const SignUpView({Key? key}) : super(key: key);

  @override
  _SignUpViewState createState() => _SignUpViewState();
}

class _SignUpViewState extends State<SignUpView> {
  // ValueNotifier<bool> _obsecurePassword = ValueNotifier<bool>(true);

  final TextEditingController _emailController = TextEditingController();
  final TextEditingController _passwordController = TextEditingController();

 
  @override
  void dispose() {
    super.dispose();
    _emailController.dispose();
    _passwordController.dispose();
    // _obsecurePassword.dispose();
  }

  @override
  Widget build(BuildContext context) {
    final authViewMode = Provider.of<AuthViewModel>(context);
    return Scaffold(
      body: SafeArea(
        child: Column(
          mainAxisAlignment: MainAxisAlignment.center,
          crossAxisAlignment: CrossAxisAlignment.center,
          children: [
            CustomTextFormField.textFormField(
              context,
                  controller: _emailController,
              keyboardType: TextInputType.emailAddress,
                hintText: 'Email',
            ),
            CustomTextFormField.textFormField(
              context,
                  controller: _passwordController,
              // keyboardType: TextInputType.emailAddress,
                hintText: 'password',
            ),
            
            SizedBox(
              height: 50,
            ),
            CustomButton.getButton(
              text: 'Sign Up',
              loading: authViewMode.signUpLoading,
              onPressed: () {
                if (_emailController.text.isEmpty) {
                  // print('Please enter email', context);
                } else if (_passwordController.text.isEmpty) {
                  // print('Please enter password', context);
                } else if (_passwordController.text.length < 6) {
                  // print(
                  //     'Please enter 6 digit password', context);
                } else {
                  Map data = {
                    'email': _emailController.text.toString(),
                    'password': _passwordController.text.toString(),
                  };

                  authViewMode.signUpApi(data, context);
                  print('api hit');
                }
              },
            ),
            SizedBox(
              height: 20,
            ),
            InkWell(
                onTap: () {
                    AppNavigator().push(context, RoutesName.login);
                },
                child: Text("Already have an account? Login"))
          ],
        ),
      ),
    );
  }
}
