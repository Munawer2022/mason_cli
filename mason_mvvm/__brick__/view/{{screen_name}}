import 'package:flutter/material.dart';
import 'package:provider/provider.dart';
import '/data/response/status.dart';
import '/utils/routes/routes_name.dart';
import '/view_model/{{screen_view_model}}';
import '/view_model/services/{{token_view_model}}';
import '/resource/app_navigator.dart';
import '/resource/components/platform_scaffold_check.dart';


class {{class_name}}View extends StatefulWidget {
  const {{class_name}}View({Key? key}) : super(key: key);

  @override
  _{{class_name}}ViewState createState() => _{{class_name}}ViewState();
}

class _{{class_name}}ViewState extends State<{{class_name}}View> {
  {{class_name}}ViewModel model = {{class_name}}ViewModel();

  @override
  void initState() {
    model.fetch{{class_name}}Api();
    super.initState();
  }

  @override
  Widget build(BuildContext context) {
    final tokenPrefernece = Provider.of<TokenViewModel>(context);
    return PlatformScaffoldCheck().getScaffold(
      appBar: AppBar(
        automaticallyImplyLeading: false,
        actions: [
          InkWell(
              onTap: () {
                tokenPrefernece.removeToken().then((value) {
                  AppNavigator().push(context, RoutesName.login);
                });
              },
              child:const Center(child: Text('Logout'))),
        ],
      ),
      body: ChangeNotifierProvider<{{class_name}}ViewModel>(
        create: (BuildContext context) => model,
        child: Consumer<{{class_name}}ViewModel>(builder: (context, value, _) {
          switch (value.model.status!) {
            case Status.LOADING:
              return const Center(child: CircularProgressIndicator.adaptive());
            case Status.ERROR:
              return Center(child: Text(value.model.message.toString()));
            case Status.COMPLETED:
              return const SizedBox();
          }
        }),
      ),
      
    );
  }
}
