import 'package:flutter/cupertino.dart';
import 'package:flutter/material.dart';
import '/utils/utils.dart';

class PlatformTextFormField {
  Widget getTextFormField({
    controller,
    hintText,
    keyboardType,
    prefixIcon,
    suffixIcon,
  }) =>
      ios
          ? _cupertinoTextFormField(
              controller, hintText, keyboardType, prefixIcon, suffixIcon)
          : _materialTextFormField(
              controller,
              hintText,
              keyboardType,
              prefixIcon,
              suffixIcon,
            );

  CupertinoTextField _cupertinoTextFormField(
      [controller, hintText, keyboardType, prefixIcon, suffixIcon]) {
    return CupertinoTextField(
      controller: controller,
      placeholder: hintText,
      keyboardType: keyboardType,
      prefix: prefixIcon,
      suffix: suffixIcon,
      textInputAction: TextInputAction.next,
    );
  }

  TextFormField _materialTextFormField(
      [controller, hintText, keyboardType, prefixIcon, suffixIcon]) {
    return TextFormField(
      controller: controller,
      keyboardType: keyboardType,
      textInputAction: TextInputAction.next,
      decoration: InputDecoration(
        suffixIcon: suffixIcon,
        prefixIcon: prefixIcon,
        hintText: hintText,
      ),
    );
  }
}
