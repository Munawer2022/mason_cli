import 'package:flutter/material.dart';
import 'package:flutter/cupertino.dart';
import '/utils/utils.dart';

class PlatformScaffoldCheck {
  Widget getScaffold(
          {required Widget body,
          ObstructingPreferredSizeWidget? navigationBar,
          PreferredSizeWidget? appBar}) =>
      ios
          ? _cupertinoPageScaffold(body: body, navigationBar: navigationBar)
          : _scaffold(body: body, appBar: appBar);

  CupertinoPageScaffold _cupertinoPageScaffold(
      {required Widget body, ObstructingPreferredSizeWidget? navigationBar}) {
    return CupertinoPageScaffold(
      navigationBar: navigationBar,
      child: body,
    );
  }

  Scaffold _scaffold({Widget? body, PreferredSizeWidget? appBar}) {
    return Scaffold(
      appBar: appBar,
      body: body,
    );
  }
}
